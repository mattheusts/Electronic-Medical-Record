{
  "name": "electronic-medical-record",
  "version": "1.0.10",
  "description": "Electron application written with Typescript",
  "main": "dist/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "typeorm": "ts-node-dev node_modules/typeorm/cli.js",
    "electron:build": "tsc && electron-builder --win --x64",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start:tsc": "tsc -w | pino-pretty -c",
    "start:nodemon": "nodemon --exec electron ./dist/main.js",
    "start": "concurrently \"yarn start:tsc\" \"yarn start:nodemon\"",
    "pre-pack": "electron-compile --appDir . ./src",
    "package": "electron-builder --dir",
    "build": "tsc",
    "dist": "build",
    "publish": "electron-builder -p always"
  },
  "build": {
    "files": [
      "dist/**/*",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "public/**/*"
    },
    "win": {
      "publish": [
        "github"
      ],
      "icon": "public/img/medical-records.png"
    },
    "publish": {
      "provider": "github",
      "owner": "matthaw",
      "repo": "Electronic-Medical-Record"
    },
    "nsis": {
      "differentialPackage": false
    },
    "extraFiles": [
      "credentials"
    ]
  },
  "repository": "https://github.com/matthaw/Electronic-Medical-Record",
  "keywords": [
    "Electron",
    "typescript"
  ],
  "author": "Matheus Teixeira",
  "license": "MIT",
  "devDependencies": {
    "@types/bootstrap": "^5.1.6",
    "@types/electron": "^1.6.10",
    "@types/fs-extra": "^9.0.11",
    "@types/image-to-base64": "^2.1.0",
    "@types/jquery": "^3.5.5",
    "@types/jspdf": "^1.3.3",
    "@types/node": "^14.14.35",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "electron": "^9.4.0",
    "electron-builder": "^22.13.1",
    "electron-is-dev": "^2.0.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "nodemon": "^2.0.7",
    "pino-pretty": "^4.7.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "electron-log": "^4.4.1",
    "electron-reload": "^1.5.0",
    "electron-updater": "^4.3.9",
    "fs-extra": "^9.1.0",
    "jQuery": "^1.7.4",
    "jspdf": "^2.3.1",
    "jspdf-autotable": "^3.5.14",
    "material-icons": "^1.10.2",
    "pdf-lib": "^1.16.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.2",
    "typeface-roboto": "^1.1.13",
    "typeorm": "^0.2.31",
    "uuid": "^8.3.2"
  }
}
